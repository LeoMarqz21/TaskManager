@using TaskManager.Models.ViewModels;
@model RegisterViewModel
@{
    ViewData["Title"] = "Sign Up";
}



<section class="">
    <div class="card">
        <div class="card-body p-4">
            <h3>Crear Cuenta</h3>
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" />
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input type="email" asp-for="Email" class="form-control" autocomplete="off" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <button type="submit" class="btn btn-dark">Registrarme</button>
                <a asp-action="Login" class="btn btn-secondary">Iniciar Sesión</a>

                <p class="text-center text-muted mt-3">----- Continuar con -----</p>
                <section class="d-flex justify-content-center">
                    <a class="btn btn-primary"
                       asp-action="ExternalLogin"
                       asp-route-provider="Microsoft">
                        Microsoft <i class="bi bi-microsoft"></i>
                    </a>
                </section>

            </form>
        </div>
    </div>
</section>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

